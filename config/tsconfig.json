{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
      "outDir": "../dist",
      "rootDir": "..",
      "sourceMap": true,
      "resolveJsonModule": true,
      "module": "ES2022",
      "moduleResolution": "node",
      "target": "ES2022",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["../src/**/*", "../prisma/seed.ts"],
    "exclude": ["../node_modules", "../dist", "../resources", "../.idea"],
    "ts-node": {
      "esm": true
    }
}